  <SectionMuted>
    <Container>
      <SectionTitle
        title={data.gallery.title}
        class="'mx-auto text-center'"
      />
      <YoutubeSection url={data.gallery.youtube} rounded />
      <ImageSlider imageAlt={data.gallery.imageAlt} />
    </Container>
  </SectionMuted>

  <div id="product">
    <SectionMuted>
      <Container>
        <SectionTitle
          title={data.testimonials.title}
          minititle={data.testimonials.minititle}
          class="'mx-auto text-center'"
        />
        <Testimonials
          testimonials={data.testimonials.reviews}
        />
      </Container>
    </SectionMuted>
  </div>

  <div id="pricing">
    <SectionMuted>
      <Container>
        <Cta
          title={data.cta.title}
          buttonText={data.cta.buttonText}
          buttonLink={data.cta.buttonLink}
          google={json.google}
          items={data.cta.items}
        />
      </Container>
