    <Container>
      <SectionTitle
        title="המרפאה"
        class="'mx-auto text-center'"
      />
      <YouTubeEmbedSection url="https://www.youtube.com/watch?v=mosSGV6awRE" rounded />
      <ImageSlider />
    </Container>
  </SectionMuted>

  <div id="product">
    <SectionMuted>
      <Container>
        <SectionTitle
          title="המלצות לקוחותינו על המרפאה"
          minititle="חוות דעת"
          class="'mx-auto text-center'"
        />
        <Testimonials />
