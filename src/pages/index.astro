---
import Layout from "@layouts/Default.astro";
import ButtonMain from "@components/base/ButtonMain.astro";
import HeroMain from "@components/hero/HeroMain.astro";
import SectionMuted from "@components/section/SectionMuted.astro";
import Container from "@components/section/Container.astro";
import SectionTitle from "@components/section/SectionTitle.astro";
import IconBlock from "@components/content/IconBlock.astro";
import Toolbar from "@components/content/doctors/grid/Toolbar.astro";
import Filters from "@components/content/doctors/grid/Filters.astro";
import Grid from "@components/content/doctors/grid/Grid.astro";
import SideStatsRight from "@components/content/features/SideStatsRight.astro";
import SideStatsLeft from "@components/content/features/SideStatsLeft.astro";
import Pricing from "@components/content/Pricing.astro";
import Cta from "@components/content/Cta.astro";
import Testimonials from "@components/content/Testimonials.astro";
import ImageSlider from "@components/content/ImageSlider.astro";
import YouTubeEmbedSection from "@components/content/YouTubeSection.astro";
---

<Layout title="דר סמי">

  <div id="doctors">
    <HeroMain />
  </div>
  <SectionMuted>
    <Container>
      <SectionTitle
        title="הכירו את שירותי המרפאה"
        subtitle="הטיפולים מתבצעים בעדינות ובמקצועיות, עם אווירה רגועה ויחס חם."
        minititle=""
      />

      <div class="grid md:grid-cols-2 ltablet:grid-cols-3 lg:grid-cols-3 gap-x-6 gap-y-12" x-intersect="activeStep = ''">
        <!-- Item -->
        <div>
          <IconBlock
            title="בדיקה, יעוץ, תכנית טיפול והצעת מחיר בחינם"
            text="מבוססות על ניסיון של 15 שנה כמומחה לשיקום. חיסכון בעלויות – הטיפול המותאם ביותר לשיניים שלך!            "
            icon="mdi:tooth-outline"
            class="'text-rose-600'"
          />
        </div>
        <!-- Item -->
        <div>
          <IconBlock
            title="השתלות שיניים"
            text="במרפאה אנו מבצעים השתלות שיניים ושיקום על גבי שתלים, לסובלים מבעיות חוסר שיניים או משיניים פגומות. הטיפול המקצועי והאיכות הגבוהה של השתלים הדנטליים, מבטיחים תוצאות הנשמרות למשך שנים רבות."
            icon="mdi:tooth-outline"
            class="'text-primary-600'"
          />
        </div>
        <!-- Item -->
        <div>
          <IconBlock
            title="שיקום הפה"
            text="הגישה הרפואית המתקדמת, הבטוחה והאסתית ביותר להשבת התפקודים הדנטליים למערכת הלעיסה, הלסתות והפנים."
            icon="mdi:tooth-outline"
            class="'text-rose-500'"
          />
        </div>
        <!-- Item -->
        <div>
          <IconBlock
            title="טיפולים אסתטיים"
            text="במרפאה ניתנים מגוון טיפולי שיניים מקצועיים לתיקון פגיעות ונזקים בשיניים, העוזרים לכם להיראות ולהרגיש נפלא. הטיפולים כוללים: שתלים, כתרים וסתימות, הלבנה וציפוי שיניים."
            icon="mdi:tooth-outline"
            class="'text-primary-600'"
          />
        </div>
        <!-- Item -->
        <div>
          <IconBlock
            title="פריודונטיה - טיפולים במחלת חניכיים"
            text="דר סמי הינו מומחה לטיפול במחלות החניכיים, הוא יטבחן באופן מדוייק את בעיית החניכיים ויציאה דרכי טיפול ופתרונות מתקדמים לטיפול הבעיה."
            icon="mdi:tooth-outline"
            class="'text-rose-500'"
          />
        </div>
        <!-- Item -->
        <div>
          <IconBlock
            title="טיפולי יישור שיניים"
            text="מרפאתנו מתמחה ביישור שיניים לבוגרים והגשמת חלום - שיניים ישרות ומושלמות."
            icon="mdi:tooth-outline"
            class="'text-primary-600'"
          />
        </div>
      </div>
    </Container>
  </SectionMuted>
